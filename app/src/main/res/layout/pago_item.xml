<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/rlPagos"
        android:layout_width="match_parent"
        android:layout_height="228dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivPagos"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/casaladrillo1"  />

        <TextView
            android:id="@+id/txDireccionContratos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_toRightOf="@id/ivPagos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="Dirección" />
        <EditText
            android:id="@+id/etDireccionPagos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginBottom="183dp"
            android:layout_below="@+id/txDireccionContratos"
            android:layout_alignStart="@id/txDireccionContratos"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/ivPagos"
            android:textSize="20sp"
            android:textStyle="bold"
            android:inputType="textPersonName"
            android:hint="dirección" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>